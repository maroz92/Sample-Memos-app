<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_medium"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".presentation.notes.details.NoteDetails"
    tools:showIn="@layout/activity_note_details">

    <EditText
        android:id="@+id/content_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="@string/details_title_hint"
        android:importantForAutofill="no"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_marginTop="@dimen/margin_small"
        android:id="@+id/content_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="top"
        android:hint="@string/details_text_value_hint"
        android:importantForAutofill="no"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@id/content_title" />

</androidx.constraintlayout.widget.ConstraintLayout>
